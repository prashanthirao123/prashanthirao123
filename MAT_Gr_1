% draw two line segments  (Example-18)
x1=rand(1,2);
y1=rand(1,2);
x2=rand(1,2);
y2=rand(1,2);
subplot(1,2,1)
plot([x1,y1],[x2,y2])

% draw a circle (Example-19)
p=nsidedpoly(1000,'Center',[2,3],'Radius',5);
plot(p,'FaceColor','r')
axis equal

% draw a ellipse (Example-20)
p=nsidedpoly(1000,'Center',[2,3],'Radius',5);
plot(p,'FaceColor','g')


% draw a rectangle-syntax             (Example-21)
rectangle('Position',[1 2 5 6])
axis([0 10 0 10])


% draw a rectangle with colours  (Example-22)
rectangle('Position', [x1, y1, x2-x1, y2-y1], 'FaceColor', 'r', 'EdgeColor', 'k');

% Draw a square  (Example-23)
rectangle('Position', [x1, y1, x2-x1, y2-y1], 'FaceColor', 'r', 'EdgeColor', 'k');
axis equal

% Draw a triangle (Example-24)
p = nsidedpoly(3, 'Center', [1 ,1], 'SideLength', 1);
plot(p);


